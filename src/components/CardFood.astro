---
interface Props {
  imageSrc: string;
  title: string;
  description: string;
  price: string; // e.g., "12.99"
}

const { imageSrc, title, description, price }: Props = Astro.props;
---

<article
  class="bg-[#15110f] p-10 text-white transition-all hover:scale-105 hover:cursor-pointer"
>
  <div>
    <img
      class="w-full bg-center rounded-lg"
      src={imageSrc}
      alt="imagen de comida"
    />
  </div>
  <div>
    <h3 class="text-2xl font-bold">{title}</h3>
    <p class="opacity-80">
      {description}
    </p>
    <p class="text-[#ec4913] font-bold text-xl">${price}</p>
  </div>
</article>
